generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AnimalPerdido {
  id          Int      @id @default(autoincrement())
  nome        String
  especie     String
  descricao   String
  raca        String
  idade       String
  porte       String
  cor         String
  corOlhos    String
  sexo        String
  localDesap  String
  dataDesap   DateTime
  fotos       String 
  createdAt   DateTime @default(now())
}

